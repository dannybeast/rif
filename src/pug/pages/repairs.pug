                            +e.LI(class=" js-tab-link")
                                +e.A Комфорт
                            +e.LI(class=" js-tab-link")
                                +e.A Премиум
                    +e.content
                        // Базовый
                        div.js-tab-content
                            +b.package
                                +e.UL.gallery
                                    .swiper-container.swiper-no-swiping
                                        .swiper-wrapper
                                            .swiper-slide
                                                a(href="assets/images/packages/1.jpg" data-fancybox="package-1")
