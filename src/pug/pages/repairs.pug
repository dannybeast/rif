                                    +e.LI Ванная акриловая, либо стальная
                                    +e.LI Гигиенический душ Grohe
                                    +e.LI Проходной переключатель света в спальне 

                                +e.H5.title Мебель по проекту (дополнительно): 
                                +e.UL.list
                                    +e.LI Кухонный гарнитур – 105500₽
                                    +e.LI Спальный гарнитур - 56500₽   


        +b.SECTION.calculate-form(class="--construction")
            .container
                form.js-calc-repairs-form
                    +e.top
                        +b.H3.title Расчитайте стоимость и срок ремонта
                        +b.radio-group
                            label
                                input(type="radio" name="type" value="Квартиры" checked)
                                span Квартиры
                            label
                                input(type="radio" name="type" value="Дома / Коттеджи")
                                span Дома / Коттеджи
                            label
                                input(type="radio" name="type" value="Коммерция")
                                span Коммерция

                    +e.form
                        +e.col
                            +b.field
                                label Выберите пакет
                                +b.LABEL.select
                                    select(name="package")
                                        option Базовый
                                        option Комфорт
                                        option Премиум 
                        +e.col
                            +b.field
                                label Площадь помещения (по полу)
                                input(type="number" name="square" placeholder='100')
                        +e.col
                            +b.field
                                label Как к вам обращаться
                                input(type="text" name="name" placeholder="Андрей")
                        +e.col
                            +b.field
                                label Ваш контактный номер
                                input(type="text" name="phone" class="js-phone-mask" placeholder="+7 (   ) ")
                        +e.col
                            +b.BUTTON.btn(class="--neutral-primary --size-md") Получить расчёт
        +b.SECTION.projects-slider
            .container
                +e.H3.title Выполненые проекты
                .swiper-prev
                    svg.svg-icon
                        use(href='assets/icons/sprite.svg#icon-arrow-thin')
                .swiper-next
                    svg.svg-icon
                        use(href='assets/icons/sprite.svg#icon-arrow-thin')
                .swiper-container
                    
                    .swiper-wrapper
                        .swiper-slide
                            +b.projects-slide
                                img(src="assets/images/projects-slider/1.jpg", alt="")
                                +e.content(data-swiper-parallax="-100" data-swiper-parallax-duration="600")
                                    p Евроремонт квартиры 80 м2
                        .swiper-slide
                            +b.projects-slide
                                img(src="assets/images/projects-slider/1.jpg", alt="")
