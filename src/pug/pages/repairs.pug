                                            .swiper-slide
                                                a(href="assets/images/packages/2.jpg" data-fancybox="package-1")
                                                    img(src="assets/images/packages/2.jpg", alt="")
                                       
                                            .swiper-slide
                                                a(href="assets/images/packages/3.jpg" data-fancybox="package-1")
