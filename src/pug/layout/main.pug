include ../bemto-master/bemto.pug

include ../utils/mixins

block variables

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    title #{title}
    meta(name="description", content=description)
    link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
    link(rel="preload" href="assets/css/app.css" as="style")
    link(rel="stylesheet" href="assets/css/app.css")
    block head

  body
    .loader
      img(src="assets/images/spinner.svg", alt="")
    main#app.wrapper
      block content

      // MODALS
      include ../includes/modals/callme
      include ../includes/modals/policy

      // To begining
      +b.A(class="to-begining hide js-scrollTo-begining")
        svg.svg-icon
          use(href='assets/icons/sprite.svg#icon-arrow')
        span В начало
    block script